= form_for @kindle do |f|
  - if @kindle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@kindle.errors.count, "error")} prohibited this kindle from being saved:"
      %ul
        - @kindle.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
